        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="InterName" Content="網路名稱" HorizontalAlignment="Left" Margin="69,155,0,0" VerticalAlignment="Top" Width="151" Height="63" Click="InterName_Click"/>
