        <Label Content="現有網路名稱：" HorizontalAlignment="Left" Margin="269,33,0,0" VerticalAlignment="Top" Width="235" Height="37" FontSize="24"/>
        <Label x:Name="Mac" Content="" HorizontalAlignment="Left" Margin="594,155,0,0" VerticalAlignment="Top" Height="84" Width="134"/>
        <Label Content="MacID" HorizontalAlignment="Left" Margin="594,111,0,0" VerticalAlignment="Top" Height="44" Width="134" FontSize="24"/>
        <Button x:Name="Clear" Content="清除" HorizontalAlignment="Left" Margin="577,278,0,0" VerticalAlignment="Top" Width="151" Height="63" Click="Clear_Click"/>

    </Grid>
</Window>
